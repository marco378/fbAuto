{
  "manifest_version": 3,
  "name": "fbAuto Job Poster",
  "version": "1.0.0",
  "description": "Automate Facebook job posting from your browser.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.facebook.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
